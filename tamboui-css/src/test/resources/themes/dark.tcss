/* Dark Theme for CSS Demo */

$bg-primary: black;
$fg-primary: white;
$accent: cyan;
$border-color: dark-gray;

/* Base styles */
* {
    color: $fg-primary;
    background: $bg-primary;
}

/* Panel styling */
Panel {
    background: black;
    border-color: $border-color;
    padding: 1;
}

Panel:focus {
    text-style: bold;
}

/* Header styling */
.header {
    color: $accent;
    text-style: bold;
    text-align: center;
}

/* Status bar */
.status {
    background: #333333;
    color: white;
    border-color: #666666;
}

/* Primary action elements */
.primary {
    color: cyan;
    text-style: bold;
}

/* Secondary elements */
.secondary {
    color: dark-gray;
}

/* Warning text */
.warning {
    color: light-yellow;
}

/* Error text */
.error {
    color: light-red;
    text-style: bold;
}

/* Success text */
.success {
    color: light-green;
}

/* Info text */
.info {
    color: light-cyan;
}

/* Dimmed text */
.dim {
    text-style: dim;
}

/* Theme indicator */
#theme-indicator {
    color: cyan;
    text-style: bold;
}
