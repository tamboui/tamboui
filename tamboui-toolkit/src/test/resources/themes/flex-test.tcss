/* CSS for flex layout tests - minimal rules for testing flex properties */

/* Base styles (no background on * to allow transparency) */
* {
    color: white;
}

/* Horizontal panel with spacing */
.horizontal-panel {
    direction: horizontal;
    spacing: 2;
}

/* Panel with margin */
.margined-panel {
    margin: 2;
}

/* Panel with centered content */
.centered-panel {
    flex: center;
}

/* Panel with full flex properties */
.full-flex-panel {
    direction: horizontal;
    flex: space-between;
    spacing: 1;
    margin: 1 2 1 2;
}
