/* Light Theme for CSS Demo */

$bg-primary: #eeeeee;
$fg-primary: black;
$accent: blue;
$border-color: #666666;

/* Base styles */
* {
    color: $fg-primary;
    background: $bg-primary;
}

/* Panel styling */
Panel {
    background: $bg-primary;
    border-color: $border-color;
}

Panel:focus {
    text-style: bold;
}

/* Header styling */
.header {
    color: $accent;
    text-style: bold;
}

/* Status bar */
.status {
    background: #cccccc;
    color: black;
    border-color: #888888;
}

/* Primary action elements */
.primary {
    color: blue;
    text-style: bold;
}

/* Secondary elements */
.secondary {
    color: gray;
}

/* Warning text */
.warning {
    color: yellow;
}

/* Error text */
.error {
    color: red;
    text-style: bold;
}

/* Success text */
.success {
    color: green;
}

/* Info text */
.info {
    color: cyan;
}

/* Dimmed text */
.dim {
    text-style: dim;
}

/* Theme indicator */
#theme-indicator {
    color: blue;
    text-style: bold;
}
